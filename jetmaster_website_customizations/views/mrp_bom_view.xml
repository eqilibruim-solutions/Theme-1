<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mrp_bom_form_view_inherit" model="ir.ui.view">
		<field name="name">mrp.bom.form.view.inherit</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook/page[1]/field[@name='bom_line_ids']/tree/field[@name='product_id']" position="before">
				<field name="ref_no"/>
			</xpath>
			<xpath expr="//notebook/page[1]/field[@name='bom_line_ids']/tree/field[@name='product_id']" position="after">
				<field name="comment"/>
			</xpath>
			<xpath expr="//field[@name='product_tmpl_id']" position="after">
				<field name="exploded_view" widget="image"/>
			</xpath> 
		</field>
	</record>
</odoo>