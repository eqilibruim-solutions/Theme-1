<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="contact_details_form_view" model="ir.ui.view">
        <field name="name">contact.details.form.view</field>
        <field name="model">contact.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="existing_fireplace"/>
                            <field name="main_reason"/>
                            <field name="fireplace_type"/>
                            <field name="about_us"/>
                        </group>
                        <group>
                            <field name="comments"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="contact_details_tree_view" model="ir.ui.view">
        <field name="name">contact.details.tree.view</field>
        <field name="model">contact.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="postcode"/>
                <field name="existing_fireplace"/>
                <field name="main_reason"/>
                <field name="fireplace_type"/>
                <field name="about_us"/>
            </tree>
        </field>
    </record>

    <record id="contact_details_view_action" model="ir.actions.act_window">
        <field name="name">Contact Details</field>
        <field name="res_model">contact.details</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="contact_details_menu_id"
              name="Contact Details" parent="jetmaster_website_customizations.jetmaster_main_menu"
              action="contact_details_view_action"
              sequence="2"
    />
</odoo>