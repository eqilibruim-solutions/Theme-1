<odoo>
    <data>
        <!-- Product Template Inherit-->

        <record id="product_view_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='sales']" position="after">
                    <page name="jetmaster" string="Jetmaster">
                        <group>
                            <field name="video_link"/>
                            <field name="product_partlist_flag"/>
                            <field name="dealers_only"/>
                        </group>
                        <br/>
                        <separator string="Product Brochures"/>
                        <br/>
                        <group>
                            <field name="product_brochures" filename="brochure_name" nolabel="1"/>
                            <field name="brochure_name" invisible="1"/>
                        </group>
                        <br/>
                        <separator string="Product Manuals"/>
                        <br/>
                        <group>
                            <field name="product_manuals" filename="manual_name" nolabel="1"/>
                            <field name="manual_name" invisible="1"/>
                        </group>
                        <br/>
                        <separator name="features" string="Product Features"/>
                        <br/>
                        <group>
                            <field name="product_features"/>
                        </group>
                        <br/>
                    </page>

                </xpath>

            </field>
        </record>

        <!-- Product Enquiry -->
        <record id="product_enquiry_view_form" model="ir.ui.view">
            <field name="name">product.enquiry.form</field>
            <field name="model">product.enquiry</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="display_name"/>
                        </group>
                        <group>
                            <group>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                    />
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <!--<field name="country_id" placeholder="Country" class="o_address_country"/>-->
                                </div>
                            </group>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="contact_preference"/>
                            <field name="unit_preference"/>
                            <field name="house_type"/>
                            <field name="unit_type_inbuilt"/>
                            <field name="inbuilt_units"/>
                            <field name="unit_type_freestanding"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Product Enquiry -->
        <record id="view_product_enquiry_tree" model="ir.ui.view">
            <field name="name">product.enquiry.tree</field>
            <field name="model">product.enquiry</field>
            <field name="arch" type="xml">
                <tree string="Product Enquiry">
                    <field name="product_id"/>
                    <field name="display_name" string="Name"/>
                    <field name="phone" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="city" optional="hide"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                    <field name="contact_preference"/>
                    <field name="unit_preference"/>
                    <field name="unit_type"/>
                </tree>
            </field>
        </record>

        <record id="action_product_enquiry" model="ir.actions.act_window">
            <field name="name">Product Enquiry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.enquiry</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <record id="product_template_list_view_inherit" model="ir.ui.view">
        	<field name="name">product.template.list.view.inherit</field>
        	<field name="model">product.template</field>
        	<field name="inherit_id" ref="product.product_template_tree_view"/>
        	<field name="arch" type="xml">
        		<xpath expr="//field[@name='name']" position="after">
        			<field name="product_partlist_flag"/>
        		</xpath>
        	
        	</field>
        </record>

        <menuitem id="product_enquiry_menu" name="Product Enquiries" action="action_product_enquiry"
                  sequence="0" parent="sale.menu_sale_config"
                  groups="sales_team.group_sale_manager"
        />
    </data>
</odoo>