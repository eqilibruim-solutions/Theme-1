<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gallery_form_view" model="ir.ui.view">
        <field name="name">gallery.form.view</field>
        <field name="model">gallery.view</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="product_id" required="1"/>
                        <field name="product_slug_url" invisible="1"/>
                        <field name="gallery_image" widget="image" style="height:100px;width:100px" required="1"/>
                        <field name="create_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gallery_tree_view" model="ir.ui.view">
        <field name="name">gallery.tree.view</field>
        <field name="model">gallery.view</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="active"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="gallery_view_action" model="ir.actions.act_window">
        <field name="name">Website Gallery</field>
        <field name="res_model">gallery.view</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ##################### GALLERY VIEW QUERIES ######################### -->

    <record id="gallery_queries_form_view" model="ir.ui.view">
        <field name="name">gallery.view.queries.form.view</field>
        <field name="model">gallery.view.queries</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="gallery_product_id"/>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gallery_queries_tree_view" model="ir.ui.view">
        <field name="name">gallery.view.queries.tree.view</field>
        <field name="model">gallery.view.queries</field>
        <field name="arch" type="xml">
            <tree>
                <field name="gallery_product_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record id="gallery_queries_view_action" model="ir.actions.act_window">
        <field name="name">Website Gallery Queries</field>
        <field name="res_model">gallery.view.queries</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="mnu_gallery_view_parent"
              name="Jetmaster Portfolio"
              parent="base.menu_administration"/>
    <menuitem id="mnu_gallery_view_portfolio"
              name="Portfolio"
              action="gallery_view_action"
              sequence="1"
              parent="mnu_gallery_view_parent"/>
    <menuitem id="gallery_view_queries_menu_id"
              name="Gallery View Queries"
              action="gallery_queries_view_action"
              sequence="2"
              parent="mnu_gallery_view_parent"/>
</odoo>