<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="booking_service_form_view" model="ir.ui.view">
        <field name="name">booking.service.form.view</field>
        <field name="model">booking.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="address"/>
                            <field name="suburb"/>
                        </group>
                        <group>
                            <field name="service_type"/>
                            <field name="brand_fireplace"/>
                            <field name="serial_no"/>
                            <field name="model_no"/>
                            <field name="promo_code"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="contact_name"/>
                            <field name="phone2"/>
                        </group>
                        <group>
                            <field name="fireplace_purchased_from"/>
                            <field name="system_type"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="booking_service_tree_view" model="ir.ui.view">
        <field name="name">booking.service.tree.view</field>
        <field name="model">booking.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="service_type"/>
                <field name="brand_fireplace"/>
                <field name="serial_no"/>
                <field name="model_no"/>
                <field name="email"/>
                <field name="fireplace_purchased_from"/>
                <field name="system_type"/>
            </tree>
        </field>
    </record>

    <record id="booking_service_view_action" model="ir.actions.act_window">
        <field name="name">Booking Service</field>
        <field name="res_model">booking.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="jetmaster_main_menu"
              name="Jetmaster"
              sequence="10"
              parent="website.menu_website_configuration"/>
    <menuitem id="booking_service_menu_id" name="Booking Services" action="booking_service_view_action"
              sequence="1" parent="jetmaster_main_menu"
    />
</odoo>