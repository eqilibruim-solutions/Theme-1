                                                    <label>Are you an existing Seller?</label>
                                                    <select id="existing-fireplace"
                                                            class="form-control o_website_form_input"
                                                            name="existing_fireplace">
                                                        <option value="yes">YES</option>
                                                        <option value="no">NO</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label>Which brand you are interest in?
                                                    </label>
                                                    <select id="what_mainreason"
                                                            class="form-control o_website_form_input"
                                                            name="main_reason">
                                                        <option value="style">CARNIVAL</option>
                                                        <option value="family">TIME</option>
                                                        <option value="heating">THIS</option>
