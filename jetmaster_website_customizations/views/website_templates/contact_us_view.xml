<odoo>
    <data>
        <template id="contact_us_view_template" name="Contact Us">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <section class="content_heading">
                            <div class="container">
                                <h1>How Can We Help You?</h1>
                                <section>
                                    Buying or Servicing a Fireplace
                                    <br/>

                                    <font style="text-transform:uppercase">Sales</font>
                                    <a href="tel:1300 219 875">1300 219 875</a>
                                    <br/>
                                    <font style="text-transform:uppercase">Service</font>
                                    <a href="tel:1300 195 482">1300 195 482</a>
                                </section>

                                <ul class="contact_menu">
                                    <li class="page_item current_page_item">
                                        <a href="/contact-us/" aria-current="page">Contact Us</a>
                                    </li>
                                    <li class="page_item">
                                        <a href="/dealers/">Find Nearest Dealer</a>
                                    </li>
                                </ul>
                            </div>
                        </section>
                    </div>


                    <div class="oe_structure">
                        <section class="contact-formsec">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-8 col-sm-8 col-xs-12">

                                        <div class="form-width">
                                            <div class="main-validation_error" style="display:none; ">
                                                There was a problem with your submission. Errors have been highlighted
                                                below.
                                            </div>


                                            <!--<form action="/save/contact_details" method="post" id="contact-usvalidate">-->
                                            <form action="/thank-you" method="post" id="contact_us_form_id">

                                                <div class="form-group">
                                                    <label>Do you have an existing fireplace?</label>
                                                    <select id="existing-fireplace"
                                                            class="form-control o_website_form_input"
                                                            name="existing_fireplace">
                                                        <option value="yes">YES</option>
                                                        <option value="no">NO</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label>What is the main reason for your interest in a fireplace?
                                                    </label>
                                                    <select id="what_mainreason"
                                                            class="form-control o_website_form_input"
                                                            name="main_reason">
                                                        <option value="style">STYLE</option>
                                                        <option value="family">FAMILY</option>
                                                        <option value="heating">HEATING</option>
                                                        <option value="other">OTHER</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label>What type of fireplace are you looking for</label>
                                                    <select id="what_mainreason_new"
                                                            class="form-control o_website_form_input"
                                                            name="fireplace_type">
                                                        <option value="gas">GAS FIREPLACE</option>
                                                        <option value="openwood">OPEN WOOD FIREPLACE</option>
                                                        <option value="electric">ELECTRIC FIREPLACE</option>
                                                        <option value="other">OTHER</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label>How did you hear about us?</label>
                                                    <select id="howdid_hear" class="form-control o_website_form_input"
                                                            name="about_us">
                                                        <option value="search_engine">SEARCH ENGINE</option>
                                                        <option value="advertising">ADVERTISING</option>
                                                        <option value="word_of_mouth">WORD OF MOUTH</option>
                                                        <option value="other">OTHER</option>
                                                    </select>
                                                </div>

                                                <div class="form-row name_emailsec">
                                                    <div class="form-group col-md-6">
                                                        <lable>Name*</lable>
                                                        <input type="text" class="form-control o_website_form_input"
                                                               id="contact_name" name="contact_name"/>
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <lable>Email*</lable>
                                                        <input type="text" class="form-control o_website_form_input"
                                                               id="contact_email" name="email"/>
                                                    </div>
                                                    <div class="name-emailmsg" style="display:none;">This field is
                                                        required.
                                                    </div>

                                                </div>

                                                <div class="form-row phone_postcodesec">
                                                    <div class="form-group col-md-6">
                                                        <lable>Phone*</lable>
                                                        <input type="text" class="form-control o_website_form_input"
                                                               id="contact_phone" name="phone"/>
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <lable>Postcode</lable>
                                                        <input type="text" class="form-control o_website_form_input"
                                                               id="contact_postcode" name="postcode"/>
                                                    </div>
                                                    <div class="phone_postcodemsg" style="display:none;">This field is
                                                        required.
                                                    </div>
                                                </div>


                                                <div class="form-row">
                                                    <div class="form-group col-md-12">
                                                        <lable>Comments</lable>
                                                        <textarea name="comments" id="comments_area"
                                                                  class="form-control" tabindex="18"
                                                                  aria-invalid="false" rows="10" cols="50"/>
                                                    </div>
                                                </div>

                                                <!--<div class="col-md-12 text-center">
                                                <a href="/purchase-unit" class="btn btn-padding" style="margin-bottom:20px">
                                                               Submit
                                                           </a>
                                                   </div>-->


                                                <div class="form-submit">
                                                    <!--<input type="submit" class="btn btn-sm btn-primary btn-padding"-->
                                                    <!--style="margin-bottom:20px"/>-->
                                                    <input type="button" id="addcontact_details"
                                                           name="addcontact_details"
                                                           class="btn btn-sm btn-primary btn-padding"
                                                           style="margin-bottom:20px" value="Submit"/>


                                                </div>


                                            </form>
                                        </div>
                                    </div>


                                    <div class="col-md-4 col-sm-4 col-xs-12 contact_leftborder">

                                        <img src="/jetmaster_website_customizations/static/src/images/gayle_hanry.jpg"
                                             alt="Gayle Hanry"/>


                                        <p>“Jetmaster has done a great job capturing our vision with the original ideas
                                            and plans we had in mind and the result is better than we would have
                                            expected.”
                                        </p>

                                        <h4>Visit Our Friendly Specialists Jetmaster VIC</h4>
                                        <h5>Address</h5>
                                        <p>444 Swan St, Richmond,
                                            VIC 3121, Australia
                                            (Free car parking available
                                            at rear of building.)
                                        </p>
                                        <h5>Trading and Phone Hours</h5>
                                        <p>Mon – Fri: 9am to 5pm
                                            <br/>
                                            Sat: 9am to 4pm
                                            <br/>
                                            Sun: 11am to 3pm
                                        </p>
                                        <p>
                                            <b>Our showroom is currently open and observing special social distancing
                                                practices. For any enquiries please call 1300 219 875 or use the contact
                                                form and we will be in touch shortly.
                                            </b>
                                        </p>

                                        <p>Please note Jetmaster Heat &amp; Glo will be closed on public holidays.</p>

                                    </div>

                                </div>
                            </div>

                        </section>
                    </div>


                    <div class="oe_structure">
                        <section>
                            <div id="map_canvas">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1575.7162427289632!2d145.00533726375028!3d-37.826759915578826!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad6425fe74345af%3A0x1f90b38ebaf26cf9!2zNDQ0IFN3YW4gU3QsIFJpY2htb25kIFZJQyAzMTIx5r6z5aSn5Yip5Lqa!5e0!3m2!1szh-CN!2s!4v1515155573782"
                                        width="100%" height="490" frameborder="0" style="border:0"
                                        allowfullscreen=""></iframe>
                            </div>


                        </section>
                    </div>

                </div>
            </t>
        </template>

        <template name="Contact Us Thanks" id="contact_us_thanks_message">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <section class="contact_us_form-section">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="contact_us_thanks text-center">
                                            <h1>Thank You</h1>
                                            <h2>Thanks for contacting us! We will get in touch with you shortly.
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                    <div class="oe_structure">
                        <section class="getin-touchsec">
                            <div class="container">
                                <div class="row">
                                    <p>Got a question for our fireplace specialists?</p>
                                    <p>
                                        <strong>Call Us Now
                                            <a style="color: black;" href="tel:+611300025316">1300 025 316</a>
                                        </strong>
                                    </p>
                                    <a class="btn btn-sm btn-primary btn-padding" style="margin: auto;"
                                       id="getin-touchbtn">
                                        Get in Touch
                                    </a>

                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>