<odoo>
    <data>
        <template id="products_inherited" inherit_id="website_sale.product" name="Products Inherited">
			
			
			<!-- Hide 30days gurantee text block -->
			<xpath expr="//div[@id='product_details']/p[hasclass('text-muted')][last()]" position="replace">
				<p></p>
			</xpath>
			
			<!-- Add a p tag for product not available for retail purchase -->
			<xpath expr="//div[@id='product_details']/p[2]" position="before">
				<p t-elif="product.dealers_only" class="alert alert-danger">This product can be purchased only through a dealer.</p>
			</xpath>
            <xpath expr="//div[@id='product_details']/div/p[1]" position="replace"/>
            <xpath expr="//div[@id='product_details']/form" position="before">
                <p t-field="product.description_sale" class="mt-3"
                   placeholder="A short description that will also appear on documents."/>

                <a class="btn btn-sm btn-primary btn-padding"
                   t-attf-href="/product_enquiry/product/{{ slug(product) }}">
                    Product Enquiry
                </a>

				<t t-if="product.product_partlist_flag">
                <button class="btn btn-sm btn-primary btn-padding"
                  		name="btn_partlist_show"
                  		t-attf-data="{{product.id}}"
                  		id="btn_partlist_show">
                    Show Partlist
                </button>
                </t>

                <div class="product-featuressec col-md-12">
                    <!--<h1>PRODUCT PAGE SHOP INHERIT</h1>-->

                    <t t-if="product.product_features">
                        <h3>FEATURES</h3>

                        <t t-raw="product.product_features"/>
                    </t>

                </div>
                <div class="product-threebtn">
                    <t t-if="product.product_brochures">
                        <div>
                            <a class="btn grey-button"
                               t-attf-href="/web/content/?model=product.template&amp;id={{product.id}}&amp;filename_field={{product.brochure_name}}&amp;field=product_brochures&amp;filename={{product.brochure_name}}"
                               target="_blank">
                                Product Brochure
                            </a>
                        </div>
                    </t>

                    <t t-if="product.product_manuals">
                        <div>
                            <a class="btn grey-button"
                               t-attf-href="/web/content/?model=product.template&amp;id={{product.id}}&amp;filename_field={{product.manual_name}}&amp;field=product_manuals&amp;filename={{product.manual_name}}"
                               target="_blank">
                                Owner's Manual
                            </a>
                        </div>
                    </t>
                </div>
            </xpath>

            <xpath expr="//section[@id='product_detail']" position="after">
            
            	<div id="partlist_data"/>
            	 <!-- Partlist Modal -->
				  <div class="modal fade" id="partlistModal">
				    <div class="modal-dialog">
				      <div class="modal-content">
				        <!-- Modal Header -->
				        <div class="modal-header">
				          <h4 class="modal-title">Sub Partlist</h4>
				          <button type="button" class="close" data-dismiss="modal">Ã—</button>
				        </div>
				        
				        <!-- Modal body -->
				        <div class="modal-body">
				          Modal body..
				        </div>
				        
				        <!-- Modal footer -->
				        <div class="modal-footer">
				          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
				        </div>
				        
				      </div>
				    </div>
				  </div>

                <section class="product-videosec">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-md-12">
                                <h2>Customer testimonial - Jetmaster open wood fireplace</h2>
<!--                                 <t t-if="product.video_link"> -->
<!--                                     <h3>VIDEO LINK</h3> -->
<!--                                     <iframe width="100%" height="600" -->
<!--                                             t-att-src="product.video_link" frameborder="0" -->
<!--                                             allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" -->
<!--                                             allowfullscreen=""></iframe> -->
<!--                                 </t> -->
                            </div>
                        </div>
                    </div>
                </section>
            </xpath>

            <!-- For Product Detail Image-->
            <xpath expr="//section[@id='product_detail']/div[2]/div" position="attributes">
                <attribute name="class">col-12 col-md-7</attribute>
            </xpath>

            <!-- For Product Right Detail Image-->
            <xpath expr="//div[@id='product_details']" position="attributes">
                <attribute name="class">col-12 col-md-5</attribute>
            </xpath>

			<!-- Add Default code just below product name -->
			<xpath expr="//div[@id='product_details']/h1" position="after">
					<span t-field="product.default_code"/>
			</xpath>

        </template>

        <!-- HEADER -->
        <template id="portal_layout_inherited" inherit_id="portal.frontend_layout" name="Portal Layout Inherited ">
            <xpath expr="//nav[hasclass('navbar-light')]" position="before">


                <section class="phone-div">
                    <div class="container">

                        <a href="tel:1300219875" class="header_menu_contact">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            Sales: 1300 219 875
                        </a>

                        <a href="tel:1300195482" class="header_menu_contact">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            Service: 1300 195 482
                        </a>

                    </div>
                </section>
            </xpath>
        </template>

        <template id="products_item_inherited" inherit_id="website_sale.products_item"
                  name="Website Product Item Inherited">
            <xpath expr="//form/div/div[hasclass('o_wsale_product_information_text')]"
                   position="after">
                <div class="add_to_cart_on_products" id="add_to_cart_on_products">
                    <form t-if="product._is_add_to_cart_possible()" action="/shop/cart/update" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="js_product check_product_id">
                            <t t-set="add_qty" t-value="0"/>
                            <input type="hidden" class="product_id" name="product_id"
                                   t-att-value="product.product_variant_id.id"/>
                            <div class="css_quantity input-group" contenteditable="false">
                                <div class="input-group-prepend">
                                    <a t-attf-href="#" class="btn btn-secondary js_add_cart_json show_minus_div"
                                       aria-label="Remove one"
                                       title="Remove one">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </div>
                                <input type="text" class="form-control quantity show_quantity" data-min="0"
                                       name="add_qty" t-att-data-product-id="product.product_variant_id.id"
                                       t-att-value="add_qty or 0"/>
                                <div class="input-group-append">
                                    <a t-attf-href="#" class="btn btn-secondary float_left js_add_cart_json plus_button"
                                       aria-label="Add one" title="Add one"
                                    >
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                            <a id="add_to_cart" role="button"
                               class="btn btn-primary btn-lg mt16 js_check_product a-submit d-block d-sm-inline-block"
                               href="#">
                                <i class="fa fa-shopping-cart"/>
                                Add to Cart
                            </a>
                        </div>
                    </form>

                </div>
            </xpath>
        </template>


