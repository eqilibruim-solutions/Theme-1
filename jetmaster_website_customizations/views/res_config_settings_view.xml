<odoo>
    <data>

        <record id="res_config_settings_view_website_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.website</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='website_logo_setting']/div" position="after">
                    <div class="o_setting_right_pane">
                        <label for="website_logo_2"/>
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific."
                              groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Display this logo on the website.
                        </div>
                        <field name="website_logo_2" widget="image" class="w-25 mt-2"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>